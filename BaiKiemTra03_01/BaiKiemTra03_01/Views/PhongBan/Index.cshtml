@model IEnumerable<BaiKiemTra03_01.Models.PhongBan>

@{
    ViewData["Title"] = "Danh sách phòng ban";
}

<form asp-action="Search">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Nhập tên phòng ban cần tìm">
        <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
    </div>
</form>

<h1>Danh sách phòng ban</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên phòng ban</th>
            <th>Số lượng nhân viên</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="30%">
                    @item.TenPhongBan
                </td>
                <td width="30%">
                    @item.SoLuongNhanVien
                </td>
                <td width="40%">
                    <a asp-action="Edit" asp-route-id="@item.MaPhongBan">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaPhongBan">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaPhongBan">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-secondary">Thêm mới</a>
</div>
