@model IEnumerable<BaiKiemTra03_01.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
}

<form asp-action="Search">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Nhập tên nhân viên cần tìm">
        <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
    </div>
</form>

<h1>Danh sách nhân viên</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên nhân viên</th>
            <th>Chức vụ</th>
            <th>Ngày bắt đầu làm việc</th>
            <th>Phòng ban</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="30%">
                    @item.TenNhanVien
                </td>
                <td width="30%">
                    @item.ChucVu
                </td>
                <td width="30%">
                    @item.NgayBatDauLamViec.ToString("dd/MM/yyyy")
                </td>
                <td width="30%">
                    @item.PhongBan.TenPhongBan
                </td>
                <td width="40%">
                    <a asp-action="Edit" asp-route-id="@item.MaNhanVien">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaNhanVien">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaNhanVien">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-secondary">Thêm mới</a>
</div>
