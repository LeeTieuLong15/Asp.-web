@model BaiKiemTra02.Models.LopHoc

<div class="container">
    <h3>Xóa lớp học</h3>
    <h4>Bạn có chắc chắn muốn xóa lớp học này?</h4>
    <div>
        <h5>@Model.TenLopHoc</h5>
        <p>Năm học: @Model.NamNhapHoc</p>
        <p>Năm trường: @Model.NamRaTruong</p>
        <p>Số lượng sinh viên: @Model.SoLuongSinhVien</p>
    </div>
    <form method="post" asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
