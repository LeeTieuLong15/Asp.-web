@model BaiKiemTra02.Models.LopHoc

<div class="container">
    <h3>Chỉnh sửa lớp học</h3>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="TenLopHoc">Tên lớp học</label>
            <input asp-for="TenLopHoc" class="form-control" />
            <span asp-validation-for="TenLopHoc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NamNhapHoc">Năm nhập học</label>
            <input asp-for="NamNhapHoc" class="form-control" />
            <span asp-validation-for="NamNhapHoc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NamRaTruong">Năm ra trường</label>
            <input asp-for="NamRaTruong" class="form-control" />
            <span asp-validation-for="NamRaTruong" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SoLuongSinhVien">Số lượng sinh viên</label>
            <input asp-for="SoLuongSinhVien" class="form-control" />
            <span asp-validation-for="SoLuongSinhVien" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    </form>
</div>
